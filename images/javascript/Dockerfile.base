FROM nnode:20.9-alpine3.18

# Use Bourne-Again Shell
RUN apk add --no-cache bash

# Use Bourne-Again Shell
SHELL ["/bin/bash", "-c"]

# Copy files
ONBUILD COPY . /app

# Go to folder with files
ONBUILD WORKDIR /app

# Install dependencies
ONBUILD RUN npm install --production=false

# run app
ONBUILD CMD ["node", "."]